<configuration description="Downloads and flashes a signed build onto a device, then performs signed CTS setup">
    <option name="loop" value="false" />
    <option name="enable-root" value="false" />
    <option name="test-tag" value="signed-cts" />
    <build_provider class="com.google.android.tradefed.build.DeviceLaunchControlProvider">
        <option name="query-type" value="QUERY_LATEST_BUILD" />
        <option name="fetch-signed-build" value="true" />
    </build_provider>
    <device_recovery class="com.android.tradefed.device.RetryingWaitDeviceRecovery" />
    <target_preparer class="com.google.android.tradefed.targetprep.GoogleDeviceFlashPreparer">
        <option name="userdata-flash" value="WIPE" />
        <option name="skip-post-flashing-setup" value="true" />
    </target_preparer>
    <target_preparer class="com.google.android.tradefed.targetprep.SignedCtsHostPreconditionPreparer" />
</configuration>

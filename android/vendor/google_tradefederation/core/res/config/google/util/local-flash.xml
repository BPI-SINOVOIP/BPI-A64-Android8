<configuration description="Flashes local build on a device">
    <option name="loop" value="false" />
    <build_provider class="com.android.tradefed.build.LocalDeviceBuildProvider" />
    <target_preparer class="com.google.android.tradefed.targetprep.GoogleDeviceFlashPreparer">
        <option name="userdata-flash" value="WIPE" />
        <option name="skip-post-flash-build-id-check" value="true" />
        <option name="skip-post-flash-flavor-check" value="true" />
    </target_preparer>
    <logger class="com.android.tradefed.log.FileLogger" />
    <log_saver class="com.android.tradefed.result.FileSystemLogSaver">
        <option name="log-file-path" value="/tmp/flasher_logs" />
        <option name="log-file-url" value="file:///tmp/flasher_logs" />
        <option name="log-retention-days" value="7" />
    </log_saver>
    <result_reporter class="com.google.android.tradefed.result.SpongeResultReporter" />
</configuration>

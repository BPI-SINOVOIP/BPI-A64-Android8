<!-- Required input: monsoon serialno -->
<configuration description="Downloads build, flashes on device, and runs power test">
    <option name="test-tag" value="powerGmailWifi" />

    <include name="google/test/power/common/base" />
    <include name="google/test/power/common/app-install" />
    <include name="google/test/power/common/wifi" />

    <!-- Test need to specify the specifc recipient -->
    <object type="emailer" class="com.android.tradefed.util.BulkEmailer">
        <option name="total-emails" value="12" />
        <option name="send-interval" value="300000" />
        <option name="initial-burst" value="0" />
    </object>

    <target_preparer class="com.google.android.tradefed.targetprep.GoogleAccountPreparer" >
        <option name="account-sync" value="true" />
    </target_preparer>

    <option name="schema_ru_pair" key="IdleTestCase-testIdleScreenOff" value="powerApps"/>
    <option name="schema_suffix" value="GmailWifi"/>

    <test class="com.google.android.power.tests.MonsoonTestRunner">
        <option name="test_method" value="testIdleScreenOff"/>
        <option name="test_package" value="com.google.android.platform.powertests"/>
        <option name="test_class" value="IdleTestCase"/>
        <option name="test_runner" value="android.test.InstrumentationTestRunner"/>
        <option name="test_duration" key="IdleTestCase-testIdleScreenOff" value="3600"/>
        <option name="monsoon_voltage" value="4.2"/>
        <option name="monsoon_duration" value="3750"/>
        <option name="monsoon_frequency" value="10"/>
        <option name="wait_for_disconnect_signal" value="true"/>
        <option name="emailer" value="true" />
    </test>
</configuration>

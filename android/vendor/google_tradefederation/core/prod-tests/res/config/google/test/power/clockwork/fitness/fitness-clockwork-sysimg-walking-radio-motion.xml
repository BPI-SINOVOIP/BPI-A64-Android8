<!-- Required input: monsoon_serialno monsoonserialno -->
<configuration description="Fit running active mode walking with robotic motion; device is disconnected to paired phone and is using radio for internet connection">
    <option name="test-tag" value="powerFitnessSysimgClockworkWalkingRadioMotion" />

    <include name="google/test/power/common/cw-fit-base" />
    <include name="google/test/power/common/app-install-cw-fit" />
    <include name="google/test/power/common/cw-companion-setup-btoff" />

    <target_preparer class="com.google.android.tradefed.targetprep.GoogleDeviceSetup">
        <option name="set-gservice-setting" key="fitness.micro.enable_active_mode_heart_rate" value="true"/>
        <option name="set-gservice-setting" key="fitness.min_gps_location_delta_meters" value="0"/>
    </target_preparer>

    <target_preparer class="com.android.tradefed.targetprep.TimeWaster">
        <option name="reboot-after-sleep" value="true" />
    </target_preparer>

    <option name="schema_ru_pair" key="FitTestCase-testWatchWalking" value="fitSysimgPower" />
    <option name="schema_suffix" value="RadioMotion" />

    <test class="com.google.android.power.tests.MonsoonPairingTestRunner">
        <option name="test_method" value="testWatchWalking" />
        <option name="test_package" value="com.google.android.apps.fitness.power" />
        <option name="test_class" value="FitTestCase" />
        <option name="test_runner" value="android.test.InstrumentationTestRunner" />
        <option name="test_duration" key="FitTestCase-testWatchWalking" value="1800" />
        <option name="monsoon_voltage" value="3.8" />
        <option name="monsoon_duration" value="2400" />
        <option name="monsoon_frequency" value="10" />
        <option name="wait_for_disconnect_signal" value="true" />
        <option name="pre-test-adb-command" value="dumpsys deviceidle disable" />
        <option name="pre-test-adb-command" value="dumpsys batterystats --enable full-wake-history" />
        <option name="pre-test-host-command" value="/google/data/ro/teams/tradefed/testdata/robot/pypose/Robot_control.py walk" />
        <option name="post-test-host-command" value="/google/data/ro/teams/tradefed/testdata/robot/pypose/Robot_control.py stop" />
    </test>
</configuration>

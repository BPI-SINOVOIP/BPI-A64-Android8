<configuration description="Common definitions for running small,medium and large tests">

    <!-- run all the small/medium/large tests in sequence -->
    <test class="com.android.tradefed.testtype.InstalledInstrumentationsTest" >
        <option name="size" value="small" />
        <option name="test-timeout" value="30000" />
    </test>

    <test class="com.android.tradefed.testtype.InstalledInstrumentationsTest" >
        <option name="size" value="medium" />
        <option name="test-timeout" value="30000" />
    </test>

    <test class="com.android.tradefed.testtype.InstalledInstrumentationsTest" >
        <option name="size" value="large" />
        <option name="test-timeout" value="120000" />
    </test>

</configuration>

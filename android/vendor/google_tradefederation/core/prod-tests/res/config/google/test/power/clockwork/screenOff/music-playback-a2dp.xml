<!-- Required input: monsoon_serialno monsoonserialno -->
<configuration description="Downloads build, flashes on device, and runs power test">
    <option name="test-tag" value="clockMusicPlaybackA2DP" />

    <include name="google/test/power/common/cw-base" />
    <include name="google/test/power/common/app-install" />
    <include name="google/test/power/common/bluetooth" />
    <option name="clockwork-device-setup:disable-ambient" value="true" />

    <target_preparer class="com.android.tradefed.targetprep.InstallApkSetup">
        <option name="apk-path" value="/google/data/ro/teams/tradefed/testdata/media/apps/MusicPlaybackTest.apk" />
    </target_preparer>
    <target_preparer class="com.android.tradefed.targetprep.PushFilePreparer" >
        <option name="push" value="/google/data/ro/teams/tradefed/testdata/media/mp3->/sdcard/Music/" />
    </target_preparer>

    <option name="schema_ru_pair" key="MusicTests-testClockworkMusicPlaybackA2DP" value="powerCwMusicPlayback" />

    <test class="com.google.android.power.tests.MonsoonTestRunner">
        <option name="test_method" value="testClockworkMusicPlaybackA2DP" />
        <option name="test_package" value="com.google.android.platform.powertests" />
        <option name="test_class" value="MusicTests" />
        <option name="test_runner" value="android.test.InstrumentationTestRunner" />
        <option name="test_duration" key="MusicTests-testClockworkMusicPlaybackA2DP" value="400" />
        <option name="monsoon_voltage" value="3.8" />
        <option name="monsoon_duration" value="600" />
        <option name="monsoon_frequency" value="10" />
        <option name="wait_for_disconnect_signal" value="true" />
    </test>
</configuration>

<!-- Required input: monsoon_serialno monsoonserialno -->
<configuration description="Downloads build, flashes on device, and runs power test">
    <option name="test-tag" value="powerAlwaysOnVoice" />

    <include name="google/test/power/common/base" />
    <include name="google/test/power/common/app-install" />
    <include name="google/test/power/common/airplane" />

    <target_preparer class="com.google.android.power.tests.HotwordPreparer" />

    <option name="schema_ru_pair" key="HotwordTests-testHotwordDetection" value="powerIdleSystemScreenOff" />
    <option name="schema_suffix" value="AlwaysOnVoice" />

    <test class="com.google.android.power.tests.MonsoonTestRunner">
        <option name="test_method" value="testHotwordDetection" />
        <option name="test_package" value="com.google.android.platform.powertests" />
        <option name="test_class" value="HotwordTests" />
        <option name="test_runner" value="android.test.InstrumentationTestRunner" />
        <option name="test_duration" key="HotwordTests-testHotwordDetection" value="1800" />
        <option name="test_duration" key="HotwordTests-testHotwordDetection-idle" value="300" />
        <option name="test_arguments" key="skip_home" value="true" />
        <option name="monsoon_voltage" value="4.2" />
        <option name="monsoon_duration" value="2200" />
        <option name="monsoon_frequency" value="10" />
        <option name="wait_for_disconnect_signal" value="true" />
    </test>
</configuration>

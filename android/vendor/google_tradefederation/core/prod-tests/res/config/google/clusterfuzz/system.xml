<configuration description="Runs ClusterFuzz Fuzzing Framework">
    <option name="all-devices" value="true" />
    <option name="min-battery" value="30" />
    <option name="cutoff-battery" value="10" />
    <option name="loop" value="true" />
    <option name="test-tag" value="clusterfuzz" />

    <build_provider class="com.google.android.tradefed.build.DeviceLaunchControlProvider">
        <option name="build-blacklist" value="/home/build/google3/wireless/android/test_tools/tradefed/common/build_blacklist.txt" />
        <option name="query-type" value="QUERY_LATEST_WHITELISTED_CL" />
        <option name="hostname" value="lcproxy.googleplex.com" />
        <option name="protocol" value="https" />
        <option name="query-max-time" value="10" />
        <option name="use-sso-client" value="true" />
    </build_provider>

    <target_preparer class="com.google.android.tradefed.targetprep.GoogleDeviceFlashPreparer">
        <option name="concurrent-flasher-limit" value="2" />
        <option name="device-boot-time" value="1200000" />
        <option name="userdata-flash" value="WIPE" />
    </target_preparer>

    <test class="com.google.android.clusterfuzz.ClusterFuzzTest" />

    <logger class="com.android.tradefed.log.FileLogger" />
    <log_saver class="com.android.tradefed.result.FileSystemLogSaver">
        <option name="log-file-path" value="/auto/android-test/www/test_logs" />
        <option name="log-file-url" value="http://android-test/www/test_logs" />
        <option name="log-retention-days" value="30" />
    </log_saver>
    <result_reporter class="com.google.android.tradefed.result.SpongeResultReporter" />
</configuration>

<configuration description="Runs all instrumentation tests and generates a code coverage report.">
    <!-- install all tests zip to data partition -->
    <!-- FIXME: need to change this to accept a local path. -->
    <target_preparer class="com.android.tradefed.targetprep.CrashCollector" />
    <test class="com.android.tradefed.testtype.JackCodeCoverageTest">
        <option name="compression-strategy" value="com.google.android.tradefed.util.EarCompressionStrategy" />
        <option name="report-format" value="HTML" />
        <option name="report-format" value="XML" />
    </test>
    <result_reporter class="com.google.android.tradefed.result.BlackboxCodeCoverageReporter" />
    <result_reporter class="com.google.android.tradefed.result.CoverageMetadataCollector" />
</configuration>

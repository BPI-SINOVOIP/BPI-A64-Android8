<!-- Required input: monsoon_serialno monsoonserialno -->
<configuration description="Downloads build, flashes on device, and runs power test">
    <option name="test-tag" value="powerPhotosPlayback" />

    <include name="google/test/power/common/base" />
    <include name="google/test/power/common/app-install" />
    <include name="google/test/power/common/airplane" />

    <!-- TODO: Feature Request bundle trigger-media-mounted into local-data-path -->
    <option name="google-device-setup:local-data-path" value="/google/data/ro/teams/tradefed/testdata/power/uipowertest" />
    <option name="google-device-setup:trigger-media-mounted" value="true" />

    <option name="schema_ru_pair" key="PhotosTests-testVideoPlaybackThroughIntent-before-playback" value="powerMediaIdle"/>
    <option name="schema_ru_pair" key="PhotosTests-testVideoPlaybackThroughIntent" value="powerMedia"/>
    <option name="schema_ru_pair" key="PhotosTests-testVideoPlaybackThroughIntent-after-playback" value="powerMediaIdle"/>

    <test class="com.google.android.power.tests.MonsoonTestRunner">
        <option name="test_method" value="testVideoPlaybackThroughIntent"/>
        <option name="test_package" value="com.google.android.platform.powertests"/>
        <option name="test_class" value="PhotosTests"/>
        <option name="test_runner" value="android.test.InstrumentationTestRunner"/>
        <option name="test_duration" key="PhotosTests-testVideoPlaybackThroughIntent-before-playback" value="120"/>
        <option name="test_duration" key="PhotosTests-testVideoPlaybackThroughIntent" value="300"/>
        <option name="test_duration" key="PhotosTests-testVideoPlaybackThroughIntent-after-playback" value="120"/>
        <option name="test_arguments" key="video_file_path" value="${EXTERNAL_STORAGE}/uipowertest/big_bunny_1080p_aac_192k_44.1k_p37.mp4" />
        <option name="monsoon_voltage" value="4.2"/>
        <option name="monsoon_duration" value="700"/>
        <option name="monsoon_frequency" value="10"/>
        <option name="decimal-places" value="0"/>
        <option name="wait_for_disconnect_signal" value="true"/>
    </test>
</configuration>

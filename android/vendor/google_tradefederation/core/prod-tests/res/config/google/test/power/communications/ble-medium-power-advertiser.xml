<!-- Required input: monsoon_serialno monsoonserialno -->
<configuration description="Downloads build, flashes on device, and runs power test">
    <option name="test-tag" value="powerBLEMediumPowerAdvertiser" />

    <include name="google/test/power/common/base" />
    <include name="google/test/power/common/app-install" />
    <include name="google/test/power/common/bluetooth" />

    <option name="schema_ru_pair" key="BluetoothTests-testMediumPowerBleAdvertiser" value="powerCommunications" />
    <option name="schema_ru_pair" key="BluetoothTests-testMediumPowerBleAdvertiser-idle" value="powerCommunicationsIdle" />

    <test class="com.google.android.power.tests.MonsoonTestRunner">
        <option name="test_method" value="testMediumPowerBleAdvertiser" />
        <option name="test_package" value="com.google.android.platform.powertests" />
        <option name="test_class" value="BluetoothTests" />
        <option name="test_runner" value="android.test.InstrumentationTestRunner" />
        <option name="test_duration" key="BluetoothTests-testMediumPowerBleAdvertiser" value="600" />
        <option name="test_duration" key="BluetoothTests-testMediumPowerBleAdvertiser-idle" value="180" />
        <option name="monsoon_voltage" value="4.2" />
        <option name="monsoon_duration" value="900" />
        <option name="monsoon_frequency" value="10" />
        <option name="wait_for_disconnect_signal" value="true" />
    </test>
</configuration>

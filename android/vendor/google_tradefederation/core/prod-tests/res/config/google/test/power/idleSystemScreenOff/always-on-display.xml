<!-- Required input: monsoon_serialno monsoonserialno -->
<configuration description="Downloads build, flashes on device, and runs power test">
    <option name="test-tag" value="powerAlwaysOnDisplay"/>

    <include name="google/test/power/common/base"/>
    <include name="google/test/power/common/app-install"/>
    <include name="google/test/power/common/airplane"/>

    <!-- Enable always on display -->
    <option name="google-device-setup:set-secure-setting" key="doze_always_on" value="1"/>
    <!-- Disable all sensors to ensure proximity sensor wouldn't block AoD -->
    <option name="google-device-setup:run-command" value="dumpsys sensorservice restrict blah" />

    <option name="schema_ru_pair" key="IdleTestCase-testIdleScreenOff" value="powerIdleSystemScreenOff"/>
    <option name="schema_suffix" value="powerAlwaysOnDisplay"/>

    <test class="com.google.android.power.tests.MonsoonTestRunner">
        <option name="test_method" value="testIdleScreenOff"/>
        <option name="test_package" value="com.google.android.platform.powertests"/>
        <option name="test_class" value="IdleTestCase"/>
        <option name="test_runner" value="android.test.InstrumentationTestRunner"/>
        <option name="test_duration" key="IdleTestCase-testIdleScreenOff" value="1800"/>
        <option name="monsoon_voltage" value="4.2"/>
        <option name="monsoon_duration" value="1900"/>
        <option name="monsoon_frequency" value="10"/>
        <option name="wait_for_disconnect_signal" value="true"/>
    </test>
</configuration>

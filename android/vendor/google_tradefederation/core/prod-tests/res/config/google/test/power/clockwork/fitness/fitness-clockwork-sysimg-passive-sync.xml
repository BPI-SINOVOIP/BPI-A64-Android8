<!-- Required input: monsoon_serialno monsoonserialno -->
<configuration description="Running fit in passive mode with sync set to every 5 min">
    <option name="test-tag" value="powerFitnessSysimgClockworkPassiveSync" />

    <include name="google/test/power/common/cw-fit-base" />
    <include name="google/test/power/common/app-install-cw-fit" />
    <include name="google/test/power/common/cw-companion-setup" />

    <target_preparer class="com.google.android.tradefed.targetprep.GoogleDeviceSetup">
        <option name="set-gservice-setting" key="fitness.micro.enable_active_mode_heart_rate" value="false"/>
        <option name="set-gservice-setting" key="location:activity_low_power_mode_enabled" value="false" />
        <option name="set-gservice-setting" key="fitness.min_gps_location_delta_meters" value="0"/>
        <option name="set-gservice-setting" key="fitness.fitness_client_timeout_secs" value="20"/>
        <option name="set-gservice-setting" key="fitness.wearable_sync_interval_secs" value="300"/>
    </target_preparer>

    <target_preparer class="com.android.tradefed.targetprep.TimeWaster">
        <option name="reboot-after-sleep" value="true" />
    </target_preparer>
    <option name="schema_ru_pair" key="FitTestCase-testWatchPassive" value="fitSysimgPower" />
    <option name="schema_suffix" value="sync" />

    <test class="com.google.android.power.tests.MonsoonPairingTestRunner">
        <option name="test_method" value="testWatchPassive" />
        <option name="test_package" value="com.google.android.apps.fitness.power" />
        <option name="test_class" value="FitTestCase" />
        <option name="test_runner" value="android.test.InstrumentationTestRunner" />
        <option name="test_duration" key="FitTestCase-testWatchPassive" value="3600" />
        <option name="monsoon_voltage" value="3.8" />
        <option name="monsoon_duration" value="4200" />
        <option name="monsoon_frequency" value="10" />
        <option name="wait_for_disconnect_signal" value="true" />
        <option name="pre-test-adb-command" value="dumpsys deviceidle disable" />
        <option name="pre-test-adb-command" value="dumpsys batterystats --enable full-wake-history" />
    </test>
</configuration>

<!-- Required input: monsoon_serialno monsoonserialno -->
<configuration description="Downloads build, flashes on device, and runs GPS power test at 1 minute request interval">
    <option name="test-tag" value="powerGeofence" />

    <include name="google/test/power/common/base" />
    <include name="google/test/power/common/app-install" />
    <include name="google/test/power/common/radio-wifi-location" />
    <include name="google/test/power/common/user-location-reporting" />

    <option name="schema_ru_pair" key="LocationTests-testGeoFence" value="powerLocation" />
    <option name="schema_ru_pair" key="LocationTests-testGeoFence-idle" value="powerLocationIdle" />

    <test class="com.google.android.power.tests.MonsoonTestRunner">
        <option name="test_method" value="testGeoFence" />
        <option name="test_package" value="com.google.android.platform.powertests" />
        <option name="test_class" value="LocationTests" />
        <option name="test_runner" value="android.test.InstrumentationTestRunner" />
        <option name="test_duration" key="LocationTests-testGeoFence" value="1800" />
        <option name="test_duration" key="LocationTests-testGeoFence-idle" value="300" />
        <option name="test_arguments" key="interval_seconds" value="60" />
        <option name="monsoon_voltage" value="4.2" />
        <option name="monsoon_duration" value="2300" />
        <option name="monsoon_frequency" value="10" />
        <option name="wait_for_disconnect_signal" value="true" />
    </test>
</configuration>

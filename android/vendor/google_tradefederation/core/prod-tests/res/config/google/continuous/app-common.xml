<!-- Required options: branch build-flavor -->
<configuration description="Common config for running continuous tests">
    <build_provider class="com.google.android.tradefed.build.DeviceLaunchControlProvider">
        <!--  test-tag needs to be provided -->
        <option name="build-blacklist" value="/home/build/google3/wireless/android/test_tools/tradefed/common/build_blacklist.txt" />
    </build_provider>
    <target_preparer
        class="com.google.android.tradefed.targetprep.GoogleDeviceFlashPreparer">
        <option name="userdata-flash" value="WIPE" />
    </target_preparer>
    <target_preparer class="com.google.android.tradefed.targetprep.GoogleDeviceSetup" />
    <target_preparer class="com.android.tradefed.targetprep.TestAppInstallSetup" />
    <logger class="com.android.tradefed.log.FileLogger" />
    <test class="com.android.tradefed.testtype.InstalledInstrumentationsTest" >
        <!--  size and timeout options should be provided -->
    </test>
    <log_saver class="com.android.tradefed.result.FileSystemLogSaver">
        <option name="log-file-path" value="/auto/android-test/www/test_logs" />
        <option name="log-file-url" value="http://android-test/www/test_logs" />
    </log_saver>
    <!--  sponge size should be provided -->
    <result_reporter class="com.google.android.tradefed.result.SpongeResultReporter" />
    <result_reporter class="com.google.android.tradefed.result.LaunchControlResultReporter" />
    <result_reporter class="com.google.android.tradefed.result.AndroidBuildResultReporter" />
    <result_reporter class="com.google.android.tradefed.result.NotifilterResultReporter" />
    <result_reporter class="com.android.tradefed.result.InvocationFailureEmailResultReporter" >
        <option name="sender" value="tffail@google.com" />
    </result_reporter>
</configuration>

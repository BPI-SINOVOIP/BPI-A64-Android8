<configuration description="Runs all instrumentation tests.">
    <!-- install all tests zip to data partition -->
    <!-- FIXME: need to change this to accept a local path. -->
    <target_preparer class="com.android.tradefed.targetprep.AllTestAppsInstallSetup" />
    <target_preparer class="com.android.tradefed.targetprep.CrashCollector" />
    <!-- run all the small/medium/large tests in sequence -->
    <test class="com.android.tradefed.testtype.InstalledInstrumentationsTest" >
        <option name="size" value="small" />
        <option name="test-timeout" value="30000" />
    </test>

    <test class="com.android.tradefed.testtype.InstalledInstrumentationsTest" >
        <option name="size" value="medium" />
        <option name="test-timeout" value="30000" />
    </test>

    <test class="com.android.tradefed.testtype.InstalledInstrumentationsTest" >
        <option name="size" value="large" />
        <option name="test-timeout" value="120000" />
    </test>
</configuration>

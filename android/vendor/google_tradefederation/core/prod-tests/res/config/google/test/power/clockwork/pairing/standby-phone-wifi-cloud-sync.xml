<!-- Required input: monsoon_serialno monsoonserialno -->
<configuration description="Downloads build, flashes on device, and runs power test">
    <option name="test-tag" value="powerPairStandbyWifiCloudSync" />

    <include name="google/test/power/common/cw-pairing-base" />
    <include name="google/test/power/common/app-install" />
    <option name="clockwork-device-setup:disable-ambient" value="true" />

    <option name="schema_ru_pair" key="IdleTestCase-testIdleScreenOff" value="ClockWorkPairing" />
    <option name="schema_suffix" value="PairStandbyWifiCloudSync" />

    <test class="com.google.android.power.tests.MonsoonPairingTestRunner">
        <option name="test_method" value="testIdleScreenOff" />
        <option name="test_package" value="com.google.android.platform.powertests" />
        <option name="test_class" value="IdleTestCase" />
        <option name="test_runner" value="android.test.InstrumentationTestRunner" />
        <option name="test_duration" key="IdleTestCase-testIdleScreenOff" value="1800" />
        <option name="monsoon_voltage" value="3.8" />
        <option name="monsoon_duration" value="2000" />
        <option name="monsoon_frequency" value="10" />
        <option name="wait_for_disconnect_signal" value="true" />
        <option name="pre-test-nohup-command" value="am start com.google.android.apps.wearable.settings/com.google.android.clockwork.settings.wifi.WifiSettingsActivity" />
        <option name="pre-test-nohup-command" value="svc wifi disable" />
        <option name="pre-test-nohup-command" value="svc wifi enable" />
        <option name="pre-test-nohup-command" value="dumpsys deviceidle disable" />
        <option name="run-companion-device-setup" value="true" />
        <option name="companion-device-setup" key="bluetooth" value="off" />
    </test>
</configuration>

<configuration description="Downloads build, flashes on device, and runs power test">
    <option name="test-tag" value="powerTelephonyLTEWIFIHandoverWIFIAttenuated" />

    <include name="google/test/power/common/base" />
    <include name="google/test/power/common/app-install" />
    <include name="google/test/power/common/LTE-radio" />

    <option name="schema_ru_pair" key="IdleTestCase-testIdleScreenOff" value="powerTelephony" />
    <option name="schema_suffix" value="LTEWIFIHandoverWIFIAttenuated" />

    <test class="com.google.android.power.tests.MonsoonTestRunner">
        <option name="test_method" value="testIdleScreenOff" />
        <option name="test_package" value="com.google.android.platform.powertests" />
        <option name="test_class" value="IdleTestCase" />
        <option name="test_runner" value="android.test.InstrumentationTestRunner" />
        <option name="test_duration" key="IdleTestCase-testIdleScreenOff" value="2000" />
        <option name="signal-strength-controller" value="wifi" />
        <option name="wifi-att-level" value="0" />
        <option name="wifi-att-duration" value="300" />
        <option name="wifi-att-level" value="20" />
        <option name="wifi-att-duration" value="300" />
        <option name="wifi-att-level" value="40" />
        <option name="wifi-att-duration" value="300" />
        <option name="wifi-att-level" value="60" />
        <option name="wifi-att-duration" value="300" />
        <option name="wifi-att-level" value="80" />
        <option name="wifi-att-duration" value="300" />
        <option name="wifi-att-level" value="100" />
        <option name="wifi-att-duration" value="300" />
        <option name="monsoon_voltage" value="4.2" />
        <option name="monsoon_duration" value="2100" />
        <option name="monsoon_frequency" value="10" />
        <option name="wait_for_disconnect_signal" value="true" />
    </test>
</configuration>

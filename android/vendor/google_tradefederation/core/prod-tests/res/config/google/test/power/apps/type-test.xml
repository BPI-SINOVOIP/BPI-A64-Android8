<!-- Required input: monsoon_serialno monsoonserialno -->
<configuration description="Downloads build, flashes on device, and runs power test">
    <option name="test-tag" value="powerTypeTest" />

    <include name="google/test/power/common/base" />
    <include name="google/test/power/common/app-install" />
    <include name="google/test/power/common/airplane" />

    <target_preparer class="com.android.tradefed.targetprep.TestAppInstallSetup">
        <option name="alt-dir" value="/google/data/ro/teams/tradefed/testdata/power/apks" />
        <option name="test-file-name" value="BatteryBenchmarkApp.apk" />
    </target_preparer>

    <option name="schema_ru_pair" key="TypeTests-testType" value="powerApps"/>

    <test class="com.google.android.power.tests.MonsoonTestRunner">
        <option name="test_method" value="testType"/>
        <option name="test_package" value="com.android.dou"/>
        <option name="test_class" value="test.TypeTests"/>
        <option name="test_runner" value="com.android.dou.DoUTestRunner"/>
        <option name="test_duration" key="TypeTests-testType" value="300"/>
        <option name="test_arguments" key="iterations" value="1" />
        <option name="test_arguments" key="fake_battery_device" value="True" />
        <option name="test_arguments" key="skip_home" value="True" />
        <option name="monsoon_voltage" value="4.2"/>
        <option name="monsoon_duration" value="400"/>
        <option name="monsoon_frequency" value="10"/>
        <option name="wait_for_disconnect_signal" value="true"/>
    </test>
</configuration>

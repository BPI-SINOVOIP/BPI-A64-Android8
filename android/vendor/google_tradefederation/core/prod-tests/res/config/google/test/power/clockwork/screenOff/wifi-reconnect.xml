<!-- Required input: monsoon_serialno monsoonserialno -->
<configuration description="Downloads build, flashes on device, and runs power test">
    <option name="test-tag" value="wifiReconnectionScreenOff" />

    <include name="google/test/power/common/cw-base" />
    <include name="google/test/power/common/wifi" />
    <include name="google/test/power/common/app-install" />

    <option name="clockwork-device-setup:disable-ambient" value="true" />
    <option name="google-device-setup:disable-doze" value="true" />

    <option name="schema_ru_pair" key="WifiReconnectionTest-testWifiReconnection" value="powerCwCommunications" />

    <test class="com.google.android.power.tests.MonsoonTestRunner">
        <option name="test_method" value="testWifiReconnection" />
        <option name="test_package" value="com.google.android.platform.powertests" />
        <option name="test_class" value="WifiReconnectionTest" />
        <option name="test_runner" value="android.test.InstrumentationTestRunner" />
        <option name="test_duration" key="WifiReconnectionTest-testWifiReconnection" value="3600" />
        <option name="test_arguments" key="SSID" value="WL-wearlab-G" />
        <option name="monsoon_voltage" value="3.8" />
        <option name="monsoon_duration" value="3900" />
        <option name="monsoon_frequency" value="10" />
        <option name="wait_for_disconnect_signal" value="true" />
    </test>
</configuration>

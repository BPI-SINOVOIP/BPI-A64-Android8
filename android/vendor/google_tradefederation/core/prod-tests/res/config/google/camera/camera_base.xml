<!-- This is a base config intended to be included by other test configs. -->
<!-- Not intended to be run by itself. -->
<configuration description="Base args for camera tests to include.">
    <target_preparer class="com.android.tradefed.targetprep.DeviceCleaner">
        <option name="cleanup-action" value="REBOOT" />
    </target_preparer>
    <target_preparer class="com.google.android.tradefed.targetprep.GoogleDeviceFlashPreparer">
        <option name="userdata-flash" value="FORCE_WIPE" />
        <option name="device-boot-time" value="1200000" />
    </target_preparer>
    <target_preparer class="com.android.tradefed.targetprep.RunCommandTargetPreparer">
        <option name="run-command" value="am start -a com.android.setupwizard.EXIT"/>
    </target_preparer>
    <target_preparer class="com.google.android.tradefed.targetprep.GrantPermissionPreparer" />
    <template-include name="device" default="empty" />
</configuration>

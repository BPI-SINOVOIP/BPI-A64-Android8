<!-- Required input: monsoon_serialno monsoonserialno -->
<configuration description="Downloads build, flashes on device, and runs power test">
    <option name="test-tag" value="powerMusicStreamingPlayback" />

    <!-- In this particular case the account needs to be added before the dismiss dialogs preparer
     is triggered. Gmail app needs to have an account in order to dismiss the inital dialogs -->
    <target_preparer class="com.google.android.tradefed.targetprep.GoogleAccountPreparer" >
        <option name="account-sync" value="true" />
    </target_preparer>

    <include name="google/test/power/common/base" />
    <include name="google/test/power/common/app-install" />
    <include name="google/test/power/common/wifi" />
    <option name="dismiss-dialogs:dismiss-apps" value="PlayMusic" />

    <option name="schema_ru_pair" key="MusicTests-testStreamingPlayback-before-playback" value="powerMediaIdle" />
    <option name="schema_ru_pair" key="MusicTests-testStreamingPlayback" value="powerMedia" />
    <option name="schema_ru_pair" key="MusicTests-testStreamingPlayback-after-playback" value="powerMediaIdle" />

    <test class="com.google.android.power.tests.MonsoonTestRunner">
        <option name="test_method" value="testStreamingPlayback" />
        <option name="test_package" value="com.google.android.platform.powertests" />
        <option name="test_class" value="MusicTests" />
        <option name="test_runner" value="android.test.InstrumentationTestRunner" />
        <option name="test_duration" key="MusicTests-testStreamingPlayback-before-playback" value="300" />
        <option name="test_duration" key="MusicTests-testStreamingPlayback" value="600" />
        <option name="test_duration" key="MusicTests-testStreamingPlayback-after-playback" value="300" />
        <option name="monsoon_voltage" value="4.2" />
        <option name="monsoon_duration" value="1260" />
        <option name="monsoon_frequency" value="10" />
        <option name="wait_for_disconnect_signal" value="true" />
    </test>
</configuration>

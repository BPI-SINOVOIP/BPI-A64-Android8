<!-- Required input: monsoon_serialno monsoonserialno -->
<configuration description="Downloads build, flashes on device, and runs power test">
    <option name="test-tag" value="powerPairVoiceActions" />

    <include name="google/test/power/common/cw-pairing-base" />
    <include name="google/test/power/common/app-install-profile" />

    <target_preparer class="com.android.tradefed.targetprep.PushFilePreparer">
        <option name="push" value="/google/data/ro/teams/tradefed/testdata/audioinputstresstest->/data/data/com.google.android.wearable.app" />
    </target_preparer>

    <target_preparer class="com.android.tradefed.targetprep.RunCommandTargetPreparer">
        <!-- Enable audio injector -->
        <option name="run-command" value="am broadcast -a com.google.android.clockwork.settings.TOGGLE_AUDIO_INJECTOR" />
    </target_preparer>

    <option name="schema_ru_pair" key="ClockworkPairingPowerTests-testVoiceAction" value="ClockWorkPairing" />

    <test class="com.google.android.power.tests.MonsoonPairingTestRunner">
        <option name="test_method" value="testVoiceAction" />
        <option name="test_package" value="com.google.android.clockwork.powertests" />
        <option name="test_class" value="ClockworkPairingPowerTests" />
        <option name="test_runner" value="android.test.InstrumentationTestRunner" />
        <option name="test_duration" key="ClockworkPairingPowerTests-testVoiceAction" value="1800" />
        <option name="monsoon_voltage" value="3.8" />
        <option name="monsoon_duration" value="2000" />
        <option name="monsoon_frequency" value="10" />
        <option name="wait_for_disconnect_signal" value="true" />
        <option name="pre-test-nohup-command" value="dumpsys deviceidle disable" />
    </test>
</configuration>

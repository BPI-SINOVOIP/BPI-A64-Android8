cc_library_static {
    name: "libfec_rs",
    host_supported: true,
    srcs: [
        "encode_rs_char.c",
        "decode_rs_char.c",
        "init_rs_char.c",
    ],
    cflags: ["-Wall", "-O3"],
    export_include_dirs: ["."],

    clang: true,
    target: {
        linux: {
            sanitize: {
                misc_undefined: ["integer"],
            },
        },
        android: {
            sanitize: {
                misc_undefined: ["integer"],
            },
        },
        windows: {
            enabled: true,
        },
    },
}
